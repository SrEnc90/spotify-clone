---
import '../styles/global.css';
import AsideMenu from '@components/AsideMenu.astro';
import { Player } from '@components/Player';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Spotify Clone</title>
		<ClientRouter fallback="none" />
	</head>
	<body>
		<div id="app" class="h-screen relative p-2 flex gap-2 items-stretch">
			<aside class="flex flex-col overflow-y-auto">
				<AsideMenu />
			</aside><!-- no es necesario colocar [grid-area:aside] porque hace referencia a la mismo elemento -->
			<main class="bg-zinc-900 rounded-lg overflow-y-auto">
				<slot />
			</main><!-- no es necesario colocar [grid-area:main] porque hace referencia a la misma elemento -->
			<footer class="[grid-area:player] min-h-25">
				<Player client:load />
			</footer>
		</div>
	</body>
</html>

<style>
	@font-face {
		font-family: 'SpotifyMixUI';
		src: url('/fonts/spotify_mix_ui_regular.otf') format('opentype');
		font-weight: 900;
		font-style: normal;
		font-display: swap;
	}

	html {
		color-scheme: light dark;
		font-family:
			'SpotifyMixUI',
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			'Segoe UI',
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			'Open Sans',
			'Helvetica Neue',
			sans-serif;
		color: white;
	}

	body {
		background-color: #000;
		margin: 0;
		min-height: 100dvh;
	}

	#app {
		display: grid;
		grid-template-areas:
			'aside main main'
			'player player player';
		grid-template-columns: 21rem 1fr;
		grid-template-rows: 1fr auto;
		height: 100dvh;
	}
</style>
